        xmlns:local="clr-namespace:WPFSQLTODO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="myId" Content="ID" HorizontalAlignment="Left" Margin="184,40,0,0" VerticalAlignment="Top"/>
        <Label x:Name="myTitle" Content="Title" HorizontalAlignment="Left" Margin="260,32,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Status" Content="myStatus" HorizontalAlignment="Left" Margin="370,32,0,0" VerticalAlignment="Top" Width="134"/>
